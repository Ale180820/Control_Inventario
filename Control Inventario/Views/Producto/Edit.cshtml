@model ControlInventarioModel.Producto

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar información del producto</h1>
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body" style="padding:20px 20px 20px 20px">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label">Nombre</label>
                        <div class="col-sm-10">
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label">Marca</label>
                        <div class="col-sm-10">
                            <input asp-for="Marca" class="form-control" />
                            <span asp-validation-for="Marca" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label">Tipo</label>
                        <div class="col-sm-10">
                            <input asp-for="Tipo" class="form-control" />
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label">Precio base</label>
                        <div class="col-sm-10">
                            <input asp-for="PrecioBase" type="number" min="0" step="any" class="form-control" />
                            <span asp-validation-for="PrecioBase" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label">Precio de venta</label>
                        <div class="col-sm-10">
                            <input asp-for="PrecioVenta" type="number" min="0" step="any" class="form-control" />
                            <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputTextarea" class="col-sm-2 col-form-label">Descripción</label>
                        <div class="col-sm-10">
                            <textarea asp-for="Descripcion" type="textarea" style="height: 100px" class="form-control" id="Descripcion" name="Descripcion"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
