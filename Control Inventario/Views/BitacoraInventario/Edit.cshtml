@model ControlInventarioModel.BitacoraInventario

<h4>BitacoraInventario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                Ubicación (No. de Gondola)
                <select asp-for="UbicacionId" class="form-control" asp-items="ViewBag.UbicacionId"></select>
            </div>
            <div class="form-group">
                Fecha de Ingreso
                <input asp-for="FechaIngreso" disabled class="form-control" />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
            <div class="form-group">
                Fecha de modificación
                <input asp-for="FechaModificacion" class="form-control" />
                <span asp-validation-for="FechaModificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                Nombre del producto
                <select asp-for="ProductoId" class="form-control" asp-items="ViewBag.ProductoId"></select>
            </div>
            <div class="form-group">
                Cantidad Inicial
                <input asp-for="CantidadInicial" disabled class="form-control" />
                <span asp-validation-for="CantidadInicial" class="text-danger"></span>
            </div>
            <div class="form-group">
                Cantidad Actual
                <input asp-for="CantidadActual" class="form-control" type="number" />
                <span asp-validation-for="CantidadActual" class="text-danger"></span>
            </div>
            <div class="form-group">
                ¿Se encuentra disponible?
                @Html.CheckBoxFor(model => model.Disponibilidad)
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

