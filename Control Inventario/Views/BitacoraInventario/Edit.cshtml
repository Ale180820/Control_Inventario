@model ControlInventarioModel.BitacoraInventario

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar información del registro</h1>
<hr />
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body" style="padding:20px 20px 20px 20px">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CantidadInicial" />
                    <input type="hidden" asp-for="FechaIngreso" />
                    <input type="hidden" asp-for="NombreProducto" />
                    <input type="hidden" asp-for="noGondola" />
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label">Ubicación (No. de Gondola)</label>
                        <div class="col-sm-10">
                            <select asp-for="UbicacionId" asp-items="@ViewBag.UbicacionId" class="form-control"></select>
                            <span asp-validation-for="UbicacionId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label">Fecha de ingreso</label>
                        <div class="col-sm-10">
                            <input asp-for="FechaIngreso" disabled class="form-control" />
                            <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label">Nombre del Producto</label>
                        <div class="col-sm-10">
                            <select asp-for="ProductoId" asp-items="@ViewBag.ProductoId" class="form-control"></select>
                            <span asp-validation-for="ProductoId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label"> Cantidad Inicial</label>
                        <div class="col-sm-10">
                            <input asp-for="CantidadInicial" disabled class="form-control" />
                            <span asp-validation-for="CantidadInicial" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label"> Cantidad Inicial</label>
                        <div class="col-sm-10">
                            <input asp-for="CantidadActual" class="form-control" type="number"/>
                            <span asp-validation-for="CantidadActual" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label"> ¿Se encuentra disponible?</label>
                        <div class="col-sm-10">
                            @Html.CheckBoxFor(model => model.Disponibilidad)
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

