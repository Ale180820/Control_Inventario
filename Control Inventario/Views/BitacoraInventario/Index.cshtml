@model IEnumerable<ControlInventarioModel.BitacoraInventario>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                No. de Gondola
            </th>
            <th>
                Fecha de ingreso
            </th>
            <th>
                Fecha de Modificación
            </th>
            <th>
                Nombre del producto
            </th>
            <th>
                Cantidad Inicial
            </th>
            <th>
                Cantidad Actual
            </th>
            <th>
                Disponibilidad
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.noGondola)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaIngreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaModificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadInicial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadActual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disponibilidad)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
